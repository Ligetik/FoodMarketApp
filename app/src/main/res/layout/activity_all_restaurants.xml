<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_blue"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"

        android:orientation="horizontal"
        android:weightSum="16">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="PodkrePizza"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="5">

            <ImageView
                android:id="@+id/cartButton"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:background="#00FFFFFF"
                android:src="@drawable/add_shopping_cart" />

            <com.nex3z.notificationbadge.NotificationBadge
                android:id="@+id/badge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                app:nbMaxTextLength="2" />
            <!--                android:layout_toRinghtOf="@id/cartButton"-->
            <!--                android:layout_alignTop="@id/cartButton"-->


        </FrameLayout>


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resview"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@+id/titleFoodName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:padding="1dp">

    </androidx.recyclerview.widget.RecyclerView>

    <SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/panel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:id="@+id/titleFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Пицца"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>