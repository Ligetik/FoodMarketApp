<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".ui.login.LogInActivity">

    <EditText
        android:id="@+id/Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/rounded_corner"
        android:hint="@string/_7_000_000_00_00"
        android:padding="5dp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner"
        android:hint="@string/Пароль"
        android:padding="5dp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="70dp" />

    <Button
        android:id="@+id/main_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:text="@string/Войти"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="70dp" />

    <Button
        android:id="@+id/forgot_you_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_login_button"
        android:background="#00FFFFFF"
        android:padding="3dp"
        android:text="@string/Забыли_пароль"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="70dp" />

    <Button
        android:id="@+id/registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_you_password"
        android:background="#00FFFFFF"
        android:padding="3dp"
        android:text="@string/Регистрация"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="70dp" />

</androidx.constraintlayout.widget.ConstraintLayout>